<h2>プロフィール</h2>
<table class='table'>
  <tr>
    <%= image_tag user.profile_image_file.url, size: '100x100' %>
  </tr>
  <tr>
    <th>ニックネーム</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>コメント</th>
    <th><%= user.introduction %></th>
  </tr>
</table>
<div class='row'>
  <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>