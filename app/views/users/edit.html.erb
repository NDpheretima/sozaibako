<main>
  <!--フラッシュメッセージ-->
  <p id="notice"><%= flash[:notice] %></p>

  <div class="container">
    <div class="row">

      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>プロフィール編集</h2>

          <!--バリデーションエラー-->
          <div id="error_explantion">
            <% if @user.errors.any? %>
              <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
              <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            <% end %>
          </div>

        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="user_name">ニックネーム</label>
            <%= f.text_field :name, class:"form-control name" %>
          </div>
          <div class="form-group">
            <label for="user_image">プロフィール画像</label>
            <%= f.file_field :profile_image_file, class:"form-control-file user_image" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">コメント</label>
            <%= f.text_area :introduction, class:"form-control introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit '変更を保存', class:"btn btn-secondary" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>

</main>

