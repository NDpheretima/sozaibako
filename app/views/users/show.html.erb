<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'users/info', user: @user %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>投稿作品一覧</h2>
          <div>
            <ul class="nav nav-tabs" role="tablist">
              <li class="active" role="presentation">
                <a aria-controls="tab_illustration" data-toggle="tab" href="#tab_illustration" role="tab">イラスト</a>
              </li>
              <li role="presentation">
                <a aria-controls="tab_music" data-toggle="tab" href="#tab_music" role="tab">音楽</a>
              </li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane active" id="tab_illustration" role="tabpanel">
                <table class='table table-hover table-inverse'>
                  <thead>
                    <tr>
                      <th></th>
                      <th>イラストタイトル</th>
                      <th>コメント</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
              <div class="tab-pane" id="tab_music" role="tabpanel">
                <table class='table table-hover table-inverse'>
                  <thead>
                    <tr>
                      <th></th>
                      <th>音楽タイトル</th>
                      <th>コメント</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</main>