<main>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <h2 class='m-5'>音楽</h2>
      <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>コメント</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @artworks_music.each do |music| %>
          <tr>
            <td>
              <%= audio_tag music.music_file.url, controls: "controls", controlslist: "nodownload" %>
            </td>
            <td>
              <%= music.title %>
            </td>
            <td>
              <%= music.body %>
            </td>
              <% if user_signed_in? %>
                <td>
                  <% if music.user_id == current_user.id %>
                    <%= link_to "編集", music_edit_path(music.id), class:"btn btn-sm btn-success" %>
                  <% end %>
                </td>
                <td>
                  <% if music.user.id == current_user.id %>
                    <%= link_to "削除", artwork_path(music.id), method: :delete, class:"btn btn-sm btn-success" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to "ダウンロード", music_download_path(music.id), class:"btn btn-sm btn-success" %>
                </td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</main>
