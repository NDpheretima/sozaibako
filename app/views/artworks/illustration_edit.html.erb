<main>

  <div class="container">
    <div class="row">

      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>イラスト編集</h2>

        <%= form_with model:@artwork, local:true do |f| %>
          <div class="form-group">
            <label for="illustration_file">ファイル(.jpg .jpeg .png)</label>
            <%= f.file_field :illustration_file, class:"form-control-file illustration_file" %>
          </div>
          <div class="form-group">
            <label for="title">タイトル</label>
            <%= f.text_field :title, class:"form-control title" %>
          </div>
          <div class="form-group">
            <label for="body">コメント</label>
            <%= f.text_area :body, class:"form-control body" %>
          </div>
          <div class="form-group">
            <%= f.submit '変更を保存', class:"btn btn-secondary" %>
          </div>
          <div>
            <%= f.hidden_field :category, :value => "illustration" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</main>